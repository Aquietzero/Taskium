- if flash[:notice]
  %p= flash[:notice]
 
%h2 Tasks on due
%table.normal-table
  - @tasks.each do |task|
    %tr.table-line
      %td.task-name= link_to task.name, task_path(task)
      %td.task-due= task.due.strftime('%Y %B, %d 00:00')
      %td.task-score= link_to 'Evaluate',
        homework_view_and_score_path(:user => @user, :task => task)

%h2 Handed-in Homeworks
.homeworks
  %ul
    - @homeworks.each do |homework|
      %li
        %a{:href => "#{homework.task.id}/#{@user.student_id}/index.html"}= homework.file
        - homework.groupscores.each do |groupscore|
          %span= groupscore.score
          %span= groupscore.explanation
