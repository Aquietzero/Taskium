- if flash[:notice]
  %p= flash[:notice]
 
%h1 Tasks
%table.normal-table
  %tr.table-head
    %th Task
    %th Due date
    %th Score
    %th
    %th

  - @tasks.each do |task|
    %tr.table-line
      %td.task-name= link_to task.name, task_path(task)
      %td.task-due
        - if task.due > Time.now
          = task.due.strftime('%Y %B, %d 00:00')
        - if task.due < Time.now
          %span.dued Dued
      %td.task-score
        - if get_final_score(@user, task) and task.released
          = get_final_score(@user, task)
          = get_final_rank(@user, task)
      %td.task-score= link_to image_tag('camera.png'),
        homework_view_and_score_path(:user => @user, :task => task)
      %td.hand-in
        - if task.due > Time.now
          = link_to image_tag('cloud_up.png'), new_homework_path(:task_id => task.id), :remote => true
      %td
        - if @user.role == 'MANAGER' and task.due > Time.now
          = link_to image_tag('notepad.png'), manager_evaluation_path(:task_id => task.id)

      - if task.released
        - task.homeworks.order(:final_rank).limit(3).each do |good_homework|
          %tr
            %td= good_homework.user.name
            %td= good_homework.final_rank
            %td= link_to image_tag('way.png'), 
              "#{task.id}/#{good_homework.user.student_id}/#{good_homework.url}"
            %td= link_to image_tag('zip.png'), 
              "#{task.id}/#{good_homework.user.student_id}/#{good_homework.file_pack}.zip"
            %td

