= form_for(@groupscore, 
  :url => homework_view_and_score_evaluated_path(:grouper => @grouper, :task => @task), 
  :remote => true) do |f|

  - if @groupscore.errors.any? 
    #error_explanation
      %h2= pluralize(@groupscore.errors.count, "error") 

      %ul
        - @groupscore.errors.full_messages.each do |msg| 
          %li= msg 

  .field
    = f.label :score
    = f.number_field :score

  .field
    = f.label :explanation
    = f.text_area :explanation

  .actions
    = f.submit
