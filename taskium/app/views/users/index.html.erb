<h1>Listing users</h1>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Student_id</th>
    <th>Email</th>
    <th>Website</th>
    <th>group</th>
    <th>role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.student_id %></td>
    <td><%= user.email %></td>
    <td><%= user.website %></td>
    <td>
    <% if user.group %>
      <%= user.group.name %>
    <% end %>
    </td>
    <td><%= user.role %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
