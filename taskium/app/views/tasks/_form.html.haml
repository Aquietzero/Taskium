= form_for(@task) do |f|
  .normal-form
    - if @task.errors.any?
      #error_explanation
        %h2= pluralize(@task.errors.count, "error") 
        prohibited this task from being saved:

        %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg 

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :requirement
      = f.text_area :requirement
    .field
      = f.label :due
      = f.datetime_select :due
    .actions
      = f.submit
