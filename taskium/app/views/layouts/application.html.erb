<!DOCTYPE html>
<html>
<head>
  <title>Taskium</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if session[:user_id] %>
    <% @user = User.find(session[:user_id]) %>
  <% end %>

  <div id="header">
    <h1>Taskium</h1><span class="subtitle">| The Aristotle'S Knowledge Inside Ultimate Mass</span>
    <div class="admin-bar">
      <!-- Shows the logout link only after the user has logged in -->
      <% if session[:user_id] %>
        <li id="logout">
          <%= link_to "logout(#{@user.name})", logout_url%>
        </li>
      <% end %>
      <!-- Shows the login link only before the user has logged in -->
      <% unless session[:user_id] %>
        <li id="login">
          <%= link_to 'login', login_url  %>
        </li>
      <% end %>
      <!-- Shows the register link all the time -->
      <li id="register">
        <%= link_to 'register', register_url %>
      </li>
      <!-- Shows the admin link only after the user has logged in -->
      <% if session[:user_id] %>
        <li id="admin">
          <%= link_to "admin", admin_url %>
        </li>
      <% end %>

    </div>
  </div>

  <div id="mainContent">
    <%= yield %>
  </div>

  <div id="footer">
    <p>Powered by Rails</p>
    <p>Copyright &copy; 2011 ~ 2012</p>
  </div>

</body>
</html>
