<div class="login-form">
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend>Login</legend>

      <div class="form-row">
        <label for="name">Name:</label>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div class="form-row">
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div class="form-row">
        <%= submit_tag 'Login' %>
      </div>

    </fieldset>
  <% end %>
</div>
